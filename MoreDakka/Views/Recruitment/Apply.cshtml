@{
    Layout = null;
    
}
<div class="container" style="padding-top: 50px;">
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body" style="padding: 0 50px 20px 50px">
                <h1>Application</h1>
                <form role="form" data-ng-submit="submitApplication()">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-group">
                                <label for="characterName">Character Name</label>
                                <input type="text" class="form-control" id="characterName" data-ng-model="application.characterName" data-ng-change="updateCharacter()" placeholder="Enter character name" />
                            </div>
                            <div class="form-group">
                                <label for="realmName">Realm Name</label>
                                <input type="text" class="form-control" id="realmName" data-ng-model="application.realmName" data-ng-change="updateCharacter()" placeholder="Enter realm" />
                            </div>
                            @if (Request.IsAuthenticated)
                            {
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="email" disabled="disabled" class="form-control" id="username" value="@User.Identity.Name" />
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" class="form-control" id="username" data-ng-model="registration.emailAddress" placeholder="Enter username" />
                                </div>
                                <div class="form-group">
                                    <label for="emailAddress">Email Address</label>
                                    <input type="email" class="form-control" id="emailAddress" data-ng-model="registration.emailAddress" placeholder="Enter email" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" id="password" data-ng-model="registration" placeholder="Password" />
                                </div>
                            }
                            
                            <div class="form-group">
                                <label>Main Spec:</label><br />
                                <div class="btn-group">
                                    <label class="btn btn-default" ng-class="{'active': application.mainspec == 'Tank'}">
                                        <input type="radio" data-ng-model="application.mainspec" name="mainspec" value="Tank">Tank
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.mainspec == 'Melee'}">
                                        <input type="radio" data-ng-model="application.mainspec" name="mainspec" value="Melee">Melee DPS
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.mainspec == 'Ranged'}">
                                        <input type="radio" data-ng-model="application.mainspec" name="mainspec" value="Ranged">Ranged DPS
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.mainspec == 'Healer'}">
                                        <input type="radio" data-ng-model="application.mainspec" name="mainspec" value="Healer">Healer
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Offspec:</label><br />
                                <div class="btn-group">
                                    <label class="btn btn-default" ng-class="{'active': application.offspec == 'Tank'}">
                                        <input type="radio" data-ng-model="application.offspec" name="offspec" value="Tank">Tank
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.offspec == 'Melee'}">
                                        <input type="radio" data-ng-model="application.offspec" name="offspec" value="Melee">Melee DPS
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.offspec == 'Ranged'}">
                                        <input type="radio" data-ng-model="application.offspec" name="offspec" value="Ranged">Ranged DPS
                                    </label>
                                    <label class="btn btn-default" ng-class="{'active': application.offspec == 'Healer'}">
                                        <input type="radio" data-ng-model="application.offspec" name="offspec" value="Healer">Healer
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div data-ng-show="character != null">
                                <table class="table table-bordered">
                                    <tr>
                                        <td colspan="2" style="text-align: center;"><img src="{{character.thumbnail}}" /></td>
                                    </tr>
                                    <tr>
                                        <td>Character Name</td>
                                        <td>{{character.characterName}}</td>
                                    </tr>
                                    <tr>
                                        <td>Realm Name</td>
                                        <td>{{character.realmName}}</td>
                                    </tr>
                                    <tr>
                                        <td>Class</td>
                                        <td>{{getClass(character.className)}}</td>
                                    </tr>
                                    <tr>
                                        <td>Race</td>
                                        <td>{{getRace(character.race)}}</td>
                                    </tr>
                                    <tr>
                                        <td>Level</td>
                                        <td>{{character.level}}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" data-ng-disabled="processing">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>