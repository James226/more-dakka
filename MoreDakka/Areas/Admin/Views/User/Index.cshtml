@model ICollection<MoreDakka.Data.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var user in Model.OrderBy(u => u.UserName))
    {
        <tr>
            <td>
                @Html.ActionLink(user.UserName, "Details", routeValues: new {Id = user.Id})
            </td>
            <td>@user.Email</td>
            <td>
                @Html.ActionLink("Manage Roles", "Manage", "Role", routeValues: new { Id = user.Id }, htmlAttributes: new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>